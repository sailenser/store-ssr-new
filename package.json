{
  "name": "store-vue-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:dev": "node server",
    "build:dev": "npm run build:client:dev && npm run build:server:dev",
    "build:client:dev": "vite build --outDir dist-ssr/client",
    "build:server:dev": "vite build --outDir dist-ssr/server --ssr src/entry-server.js",

    "start:prod": "NODE_ENV=production node server.js",
    "build:prod": "npm run clean && npm run build:client:prod && npm run build:server:prod",
    "build:client:prod": "vite build --outDir dist-ssr/client --mode production",
    "build:server:prod": "vite build --outDir dist-ssr/server --ssr src/entry-server.js --mode production",

    "clean": "rm -rf dist-ssr",

    "lint": "eslint --ext .js,.vue,.ts --fix src",
    "lint:fix": "eslint --ext .js,.vue,.ts src/ --fix",
    "format": "prettier .  --write"
  },
  "dependencies": {
    "@vue/server-renderer": "^3.5.24",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "serialize-javascript": "^7.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.4"
  }
}
