{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "printWidth": 90,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "vueIndentScriptAndStyle": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.{css,scss,less}",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.{ts}",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
